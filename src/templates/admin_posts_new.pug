extends admin_layout

block content
	#datablock(style="display: none", data-userid=`${user._id}`)

	h1 Create a New Post
	.form.postForm
		.row
			.col-sm-8
				ul.list.postformList
					li
						h3 Title
						input(type="text", id="q_title")
					li
						h3 Slug
						input(type="text", id="q_slug")
					li
						h3 Post Body
						.toggleBox
							label Use Content Blocks?
							input(id="cb_toggle", type="checkbox")
						div#q_content
						script.
							$(document).ready(function() {
							    $('#q_content').summernote({
							    	height: 300,
							    });
							});
						#cb
							p Add a section to the post
							ul.list#content_block_list
							ul.list.post_section_menu
								//- li Plain text
								//- li html
								//- li Image
								//- li Video
			.col-sm-4
				h3 Featured Image
				#featImg_container
					p No Featured Image Set
					#remove_img
						p Remove Featured Img
				.panel.panel-default#upload_box
					.panel-body
						span(class="glyphicon glyphicon-cloud-upload")
						.progress
							#feat_img_prog.progress-bar(role="progressbar")
						input(id="upload-input" type="file" name="uploads[]" multiple="multiple")
						button.btn#upload_btn(type="button") Upload File

				h3 Categories
				button.expand_addcatbox.btn Add a Category

				.addcatbox
					input#q_catname(placeholder="Category name...")
					input#q_cat_description(placeholder="Category description...")
					button#add_cat.btn Submit
					#cats_err.error_box
					#cats_success.success_box

				ul.list.categories
					each category in categories
						li
							input(type="checkbox", value=`${category._id}`)
							label #{category.name}
							ul.list
								li
									span.delbtn.deletecat(data-catid=`${category._id}`) Delete
								li
									a Edit

		p.btn(href="", id="send_btn") Submit
		img#spin(src="/static/img/spin.gif")
		#error_box
		#successBox