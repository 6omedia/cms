		//- 	ul.list#side_taxonomy_list
		//- 		each taxonomy in taxonomies
		//- 			li
		//- 				span.delete(data-postid=`${taxonomy._id}`) Delete
		//- 				a(href=`/admin/taxonomies/${taxonomy.taxonomy_name}`) #{taxonomy.taxonomy_name}

			

	.main_section
		block content

	script(src='/static/js/admin/popup.js')
	script(src='/static/js/admin/form.js')
	script(src='/static/js/admin/forminfo.js')
	script(src='/static/js/admin/admin.js')
	script(src='/static/js/admin/post_manager.js')
	script(src='/static/js/admin/taxonomy.js')

	case admin_script
		when 'posts'
			script(src='/static/lib/summernote/summernote.js')
			script(src='/static/js/admin/image_uploader.js')
			script(src='//code.jquery.com/ui/1.12.1/jquery-ui.js')
			script(src='/static/js/admin/media_manager.js')
			script(src='/static/lib/content_blocks/content_blocks.js')
			script(src='/static/js/admin/admin_posts.js')
		when 'terms'
			script(src='/static/js/admin/admin_terms.js')
		when 'users'
			script(src='/static/js/admin/admin_users.js')
		when 'media'
			script(src='/static/js/admin/media_manager.js')
			script(src='/static/js/admin/admin_media.js')
		when 'visitors'
			script(src='/static/js/admin/admin_visitors.js')


