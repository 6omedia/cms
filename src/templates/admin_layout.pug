include ./partials/_admin_head.pug
include ./partials/_admin_header.pug
body
	.side_section
		h1 Content Types
		ul.list
			if user.permissions.length > 0
				if user.permissions[0].manage_posts
					li
						a(href="/admin/posts") Posts

		h1 Taxonomies
		ul.list
			li
				a(href="/admin/taxonomies/categories") Categories

		h1 Media
		ul.list
			li
				a(href="/admin/media/images") Open Images Folder
			li
				a(href="/admin/media/videos") Open Videos Folder

		h1 Settings
		ul.list
			if user.permissions.length > 0
				if user.permissions[0].manage_users
					li
						a(href="/admin/users") Users

		//- section.side_taxonomies
		//- 	h2 Taxonomies
